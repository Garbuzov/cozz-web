{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    ".read": true,
    ".write": false,
    
    "messages": {
      ".read": true,
      ".write": true,
      ".indexOn": [
        "createdAt"
      ]
    },

    "users": {
      ".read": true,
      ".write": true
    },

    "specs": {
      ".read": true,
      ".write": true
    },

    "areas": {
      ".read": true,
      ".write": true
    }
  }
}